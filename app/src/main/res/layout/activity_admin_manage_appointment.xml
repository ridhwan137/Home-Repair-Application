<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="40dp"
    tools:context=".admin.AdminManageAppointment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="left">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/ic_baseline_arrow_back_ios_24"
            android:textColor="#000000"
            android:fontFamily="@font/keepcalm_medium"
            app:backgroundTint="#000000"/>


        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:text="Manage Appointment"
            android:textColor="#000000"
            android:fontFamily="@font/poppins_regular"
            android:background="#0000"
            app:backgroundTint="#fff"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center">

        <android.widget.Button
            android:id="@+id/btn_adminToPendingAppointment"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/background_shape"
            android:layout_weight="1"
            android:elevation="10dp"
            android:stateListAnimator="@null"
            android:layout_margin="20dp"
            android:text="List Of Pending Appointment">
        </android.widget.Button>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center">

        <android.widget.Button
            android:id="@+id/btn_adminToInProgressAppointment"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/background_shape"
            android:layout_weight="1"
            android:elevation="10dp"
            android:stateListAnimator="@null"
            android:layout_margin="20dp"
            android:text="List Of In-Progress Appointment">
        </android.widget.Button>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center">

        <android.widget.Button
            android:id="@+id/btn_adminToCompleteAppointment"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/background_shape"
            android:layout_weight="1"
            android:elevation="10dp"
            android:stateListAnimator="@null"
            android:layout_margin="20dp"
            android:text="List Of Complete Appointment">
        </android.widget.Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center">


        <android.widget.Button
            android:id="@+id/btn_adminToCancelAppointment"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/background_shape"
            android:layout_weight="1"
            android:elevation="10dp"
            android:stateListAnimator="@null"
            android:layout_margin="20dp"
            android:text="List Of Cancel Appointment">
        </android.widget.Button>

        <android.widget.Button
            android:id="@+id/btn_adminToRejectAppointment"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/background_shape"
            android:layout_weight="1"
            android:elevation="10dp"
            android:stateListAnimator="@null"
            android:layout_margin="20dp"
            android:text="List Of Reject Appointment">
        </android.widget.Button>


    </LinearLayout>




</LinearLayout>