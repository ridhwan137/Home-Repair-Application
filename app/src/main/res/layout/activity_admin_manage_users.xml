<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    tools:context=".admin.AdminManageUsers">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="left">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/ic_baseline_arrow_back_ios_24"
            android:textColor="#000000"
            android:fontFamily="@font/keepcalm_medium"
            app:backgroundTint="#000000"/>


        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:text="Manage User"
            android:textColor="#000000"
            android:fontFamily="@font/poppins_regular"
            android:background="#0000"
            app:backgroundTint="#fff"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:gravity="center">


        <android.widget.Button
            android:id="@+id/btn_adminToUserProvider"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:elevation="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="List Of Service Provider">
        </android.widget.Button>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:gravity="center">


        <android.widget.Button
            android:id="@+id/btn_adminToUserClient"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:elevation="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="List Of Client">
        </android.widget.Button>



    </LinearLayout>





</LinearLayout>