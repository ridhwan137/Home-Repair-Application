<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".provider.HistoryAppointmentServiceProvider">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="0dp"
        android:elevation="10dp"
        android:background="@drawable/background_shape">

        <TextView
            android:id="@+id/tv_ClientInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins"
            android:text="Client Information"
            android:textSize="20dp"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/img_pictureClient"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:gravity="center" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity=""
            android:layout_marginTop="0dp"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:textColorHint="@color/black">

                    <EditText
                        android:id="@+id/et_detailClientName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:padding="10dp"
                        android:hint="Client Name"
                        android:focusable="false"/>

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:textColorHint="@color/black">

                    <EditText
                        android:id="@+id/et_detailClientEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:padding="10dp"
                        android:hint="Email"
                        android:focusable="false"/>

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:textColorHint="@color/black">

                    <EditText
                        android:id="@+id/et_detailClientPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:padding="10dp"
                        android:hint="Contact Number"
                        android:focusable="false"/>

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:textColorHint="@color/black">

                    <EditText
                        android:id="@+id/et_detailClientAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:padding="10dp"
                        android:hint="Address"
                        android:focusable="false"/>

                </com.google.android.material.textfield.TextInputLayout>






                <TextView
                    android:id="@+id/tv_dateRequestAppointment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:ems="5"
                    android:focusable="false"
                    android:fontFamily="@font/keepcalm_medium"
                    android:text="(Date Request Appointment)"
                    android:hint="Date Request Appointment"
                    android:textSize="13sp" />







                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_detailClientDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:ems="5"
                        android:focusable="false"
                        android:fontFamily="@font/keepcalm_medium"
                        android:hint="Date"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_detailClientTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="center"
                        android:layout_marginLeft="50dp"
                        android:layout_weight="1"
                        android:ems="5"
                        android:focusable="false"
                        android:fontFamily="@font/keepcalm_medium"
                        android:hint="Time"
                        android:textSize="13sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_totalPriceView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:ems="5"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:fontFamily="@font/keepcalm_medium"
                        android:text="Total Price(RM):"
                        android:hint="Total Price(RM): "
                        android:textSize="13sp" />


                    <TextView
                        android:id="@+id/tv_totalPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:ems="5"
                        android:focusable="false"
                        android:fontFamily="@font/keepcalm_medium"
                        android:hint="0.00"
                        android:textColorHint="#6d6d6d"
                        android:textSize="13sp" />


                </LinearLayout>


 <!--               <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_appointmentStatusName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:ems="5"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:fontFamily="@font/keepcalm_medium"
                        android:text="Status: "
                        android:hint="Total Price(RM): "
                        android:textSize="13sp" />


                    <TextView
                        android:id="@+id/tv_appointmentStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:ems="5"
                        android:focusable="false"
                        android:fontFamily="@font/keepcalm_medium"
                        android:textColorHint="@color/black"
                        android:textSize="13sp" />


                </LinearLayout>-->


            </LinearLayout>


        </LinearLayout>
<!--
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:elevation="10dp"
            app:cardCornerRadius="10dp">


        </androidx.cardview.widget.CardView>
        -->

        <Button
            android:id="@+id/btn_detailAppointmentStatus"
            android:layout_width="246dp"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:hint="Pending/In-Progress/Complete"
            app:backgroundTint="#417D7A" />

    </LinearLayout>


</ScrollView>