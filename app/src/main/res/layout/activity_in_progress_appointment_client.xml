<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".client.InProgressAppointmentClient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="left">

            <Button
                android:id="@+id/btn_backToClientProfile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="30dp"
                android:onClick="backButton"
                android:background="@drawable/ic_baseline_arrow_back_ios_24"
                android:textColor="#000000"
                android:fontFamily="@font/keepcalm_medium"
                app:backgroundTint="#000000"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:elevation="10dp"
            android:background="@drawable/background_shape">

            <TextView
                android:id="@+id/tv_ServicesInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:text="Services Information"
                android:fontFamily="@font/poppins"
                android:textSize="20dp"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/img_pictureCompany"
                android:src="@drawable/profilepicturenoimage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity=""
                android:layout_marginTop="0dp"
                android:orientation="horizontal">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:textColorHint="@color/black">

                        <EditText
                            android:id="@+id/et_detailCompanyName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:padding="10dp"
                            android:hint="Company Name"
                            android:focusable="false"/>

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:textColorHint="@color/black">

                        <EditText
                            android:id="@+id/et_detailCompanyServiceType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:padding="10dp"
                            android:focusable="false"
                            android:hint="Service Type"/>

                    </com.google.android.material.textfield.TextInputLayout>



                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:textColorHint="@color/black">

                        <EditText
                            android:id="@+id/et_detailCompanyEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:padding="10dp"
                            android:focusable="false"
                            android:hint="Email"/>

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:textColorHint="@color/black">

                        <EditText
                            android:id="@+id/et_detailCompanyPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:padding="10dp"
                            android:focusable="false"
                            android:hint="Contact Number"/>

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:textColorHint="@color/black">

                        <EditText
                            android:id="@+id/et_detailCompanyAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:padding="10dp"
                            android:focusable="false"
                            android:hint="Address"/>

                    </com.google.android.material.textfield.TextInputLayout>


                    <TextView
                        android:id="@+id/tv_providerLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        android:text="Services Location"
                        android:fontFamily="@font/poppins"
                        android:textSize="20dp"
                        android:textAlignment="center" />

                    <!-- Map Fragment-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp">

                        <fragment
                            class="com.google.android.gms.maps.SupportMapFragment"
                            android:id="@+id/mapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_dateRequestAppointment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:ems="5"
                        android:focusable="false"
                        android:fontFamily="@font/keepcalm_medium"
                        android:text="(Date Request Appointment)"
                        android:hint="Date Request Appointment"
                        android:textSize="13sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_detailCompanyDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:ems="5"
                            android:focusable="false"
                            android:fontFamily="@font/keepcalm_medium"
                            android:hint="Date"
                            android:inputType="textPersonName"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_detailCompanyTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:gravity="center"
                            android:layout_marginLeft="50dp"
                            android:layout_weight="1"
                            android:ems="5"
                            android:focusable="false"
                            android:fontFamily="@font/keepcalm_medium"
                            android:hint="Time"
                            android:inputType="textPersonName"
                            android:textSize="13sp" />


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity=""
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:elevation="10dp"
            android:background="@drawable/background_shape">

            <TextView
                android:id="@+id/tv_serviceProvideCharge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle=""
                android:text="Services Charges"
                android:textSize="17sp"
                android:fontFamily="@font/keepcalm_medium"
                android:layout_marginLeft="-5dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp"
                >


                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Services Offer"
                    android:textSize="14sp"
                    android:fontFamily="@font/keepcalm_medium"
                    android:layout_marginLeft="0dp"
                    />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Price (RM)"
                    android:textSize="14sp"
                    android:fontFamily="@font/keepcalm_medium"
                    android:layout_marginLeft="0dp"

                    tools:layout_editor_absoluteX="60dp"
                    tools:layout_editor_absoluteY="28dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="1dp"
                android:gravity="center">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvServiceItem"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <ProgressBar
                        android:id="@+id/idProgressBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/rvServiceItem" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:text="Total Price (RM): "
                    android:textSize="15dp"
                    android:fontFamily="@font/keepcalm_medium"
                    android:textAlignment="center" />


                <TextView
                    android:id="@+id/tv_totalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:text="Price"
                    android:textSize="15dp"
                    android:fontFamily="@font/keepcalm_medium"
                    android:textAlignment="center" />


            </LinearLayout>





        </LinearLayout>

        <Button
            android:id="@+id/btn_generateInvoice"
            android:layout_width="246dp"
            android:layout_height="56dp"
            android:layout_marginBottom="30dp"
            android:text="Generate Invoice"
            app:backgroundTint="#417D7A" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:elevation="10dp"

            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"

            android:background="@drawable/background_shape">

            <TextView
                android:id="@+id/tv_uploadReceipt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:text="Receipt Picture"
                android:textSize="20dp"
                android:fontFamily="@font/keepcalm_medium"
                android:textAlignment="center" />

        </LinearLayout>

        <ImageView
            android:focusable="false"
            android:id="@+id/img_receiptPicture"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/ic_baseline_receipt_24"/>

        <Button
            android:id="@+id/btn_downloadReceipt"
            android:layout_width="246dp"
            android:layout_height="56dp"
            android:layout_marginBottom="30dp"
            android:text="Download Receipt"
            app:backgroundTint="#417D7A" />

        <Button
            android:id="@+id/btn_completeAppointment"
            android:layout_width="246dp"
            android:layout_height="56dp"
            android:layout_marginBottom="30dp"
            android:text="Complete Appointment"
            app:backgroundTint="#417D7A" />


    </LinearLayout>


</ScrollView>